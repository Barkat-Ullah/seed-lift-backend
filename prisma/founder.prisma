model Founder {
    id           String       @id @default(auto()) @map("_id") @db.ObjectId
    fullName     String
    description String?
    email        String       @unique
    profile      String?
    phoneNumber  String?      @unique
    businessName String?
    orgType      OrgTypeEnum?

    user User @relation(fields: [email], references: [email])

    challenge Challenge[]
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt

    @@map("founder")
}
