model Admin {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    fullName    String
    email       String   @unique
    profile     String?
    phoneNumber String?
    address     String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    user        User     @relation(fields: [email], references: [email])

    banner Banner[]
    subscription Subscription[]

    @@map("admins")
}
